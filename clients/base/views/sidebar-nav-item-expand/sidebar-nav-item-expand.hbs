{{#if appIsSynced}}
    <button class="collapsed sidebar-nav-item-btn flex flex-row items-center h-full w-full bg-transparent absolute p-0 text-base"
        rel="tooltip"
        data-placement="{{tooltipPlacement}}"
        title="{{str 'LBL_SIDEBAR_NAV_OPEN' module}}"
        aria-label="{{str 'LBL_SIDEBAR_NAV_OPEN' module}}"
    >
        <span class="{{buildIcon icon}} inline-flex items-center justify-center h-full w-full bg-transparent text-white cursor-pointer"></span>
    </button>
    <button class="expanded sidebar-nav-item-btn flex flex-row items-center h-full w-full bg-transparent absolute p-0 text-base" aria-label="{{str 'LBL_SIDEBAR_NAV_CLOSE' module}}">
        <span class="h-full w-15">
            <span class="{{buildIcon icon}} inline-flex items-center justify-center h-full w-full bg-transparent text-white cursor-pointer"></span>
        </span>
    </button>
{{/if}}
