{{#if isAvailable}}
    <button class="sidebar-nav-item-btn flex flex-row items-center h-full w-full bg-transparent absolute p-0 text-base text-initial">
        <span class="collapsed h-full w-full" rel="tooltip" data-placement="{{tooltipPlacement}}" title="{{str 'LBL_OMNICHANNEL' module}}">
            <i class="sicon sicon-sugar-live-lg inline-flex items-center justify-center h-full w-full text-white"></i>
            <i class="sicon sicon-check-circle omnichannel-logged-in bg-sidebar-nav-background text-2xs text-white absolute top-1/4 hidden"></i>
        </span>

        <span class="expanded h-full w-full ellipsis_inline pr-4 text-white" data-placement="{{tooltipPlacement}}" title="{{str 'LBL_OMNICHANNEL' module}}">
            <span class="h-full w-15">
                <i class="{{buildIcon 'sicon-sugar-live-lg'}} inline-flex items-center justify-center h-full w-15 text-white"></i>
                <i class="{{buildIcon 'sicon-check-circle'}} omnichannel-logged-in bg-sidebar-nav-background text-2xs text-white absolute top-1/4 hidden"></i>
            </span>
            <span class="text-sm">{{str 'LBL_OMNICHANNEL'}}</span>
        </span>
    </button>

    {{#if configAvailable}}
        <button class="sidebar-nav-item-kebab bg-transparent absolute p-0 h-full w-4" aria-label="{{secondaryActionLabel}}">
            <i class="{{buildIcon 'sicon-kebab'}} text-white"></i>
        </button>
        <button class="sidebar-nav-item-kebab-disabled bg-transparent absolute h-full p-0 hide"
                rel="tooltip"
                title="{{str 'LBL_OMNICHANNEL_SET_OFFLINE_BEFORE_CONFIGURING'}}"
                aria-label="{{str 'LBL_OMNICHANNEL_SET_OFFLINE_BEFORE_CONFIGURING'}}"
        >
            <i class="{{buildIcon 'sicon-kebab'}} disabled"></i>
        </button>
    {{/if}}
{{/if}}
