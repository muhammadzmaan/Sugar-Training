{{#if appIsSynced}}
    <a class="sidebar-nav-item-btn flex flex-row items-center h-full w-full bg-transparent absolute text-base" href="{{route}}">
        <span class="collapsed h-full w-full" rel="tooltip" data-placement="{{tooltipPlacement}}" title="{{str label module}}">
            {{moduleLabel module 'lg' class='h-full w-15 label-module-color-sidebar cursor-pointer'}}
        </span>

        <span class="expanded h-full w-full ellipsis_inline pr-4 text-white" data-placement="{{tooltipPlacement}}" title="{{str label module}}">
            {{moduleLabel module 'lg' class='h-full w-15 label-module-color-sidebar cursor-pointer'}}
            <span class="align-middle text-sm">
                {{str label module}}
            </span>
        </span>
    </a>

    {{#if secondaryAction}}
        <button class="sidebar-nav-item-kebab bg-transparent absolute p-0 h-full w-4" aria-label="{{secondaryActionLabel}}">
            <i class="{{buildIcon 'sicon-kebab'}} text-white"></i>
        </button>
    {{/if}}
{{/if}}
