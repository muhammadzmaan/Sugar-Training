<ul class="nav nav-tabs">
    {{#each _tabs}}
        {{#if hasTitle}}
            <li class="tab{{#eq ../../activeTabIndex @index}} active{{/eq}}">
                <a
                    class="ellipsis_inline"
                    data-index="{{@index}}"
                    data-toggle="tab"
                    data-html="true"
                    rel="tooltip"
                    data-placement="bottom"
                    data-original-title="{{#if ../isFocusDashboard}}{{../../context.dataTitle.module}} | {{../../context.dataTitle.view}}
{{../../context.dataTitle.name}}{{else}}{{../../recordName}}{{/if}}"
                >
                    {{moduleLabel context.module 'sm'}}
                    <span class="tab-title font-semibold">{{#if ../isFocusDashboard}}{{../../dashboardName}}{{else}}{{../../recordName}}{{/if}}</span>
                    <i class="sicon sicon-close" data-index="{{@index}}"></i>
                </a>
            </li>
        {{/if}}
    {{/each}}
</ul>
