<tr class="flex-list-row-header">
    {{#each view._fields.visible}}
        <th class="reports-row-header-padding sortable sorting{{#eq ../view.orderBy.field name}}_{{../../view.orderBy.direction}}{{/eq}} orderBy{{name}}" data-tablekey="{{column_key}}" class="{{#if widthClass}} {{widthClass}}{{/if}}"
            {{#if styles}} style="{{styles}}"{{/if}}
            {{#if name}} data-fieldname="{{name}}" data-realname="{{rname}}"{{/if}} data-orderby="{{orderBy}}">

            <div class="sortable-row-header-container">
                <span class="sortable-row-header-column-name">
                    {{#if icon}}
                        <i class="{{buildIcon icon.type}}" rel="tooltip"  title="{{str icon.tooltip ../../view.module}}"></i>
                    {{/if}}
                    {{#if labelValue}}
                        {{labelValue}}
                    {{else}}
                        {{str vname module}}
                    {{/if}}
                </span>
                <span class="sortable-row-header-arrows data-table-top">
                    <i class="sicon sicon-arrow-up"></i>
                    <i class="sicon sicon-arrow-down"></i>
                </span>
            </div>
        </th>
    {{/each}}
    {{#each view.rightColumns}}
        <td class="smd-rc">&nbsp;</td>
    {{/each}}
</tr>
