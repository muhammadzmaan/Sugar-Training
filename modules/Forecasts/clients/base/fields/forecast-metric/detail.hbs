<div class="forecast-metric flex flex-column py-1 tcenter {{#if active}}active{{/if}}" data-placement="bottom"
     {{#if dir}} dir="{{dir}}"{{/if}} rel="tooltip"
    title="{{formatCurrency value}}{{#if alternateCurrency}} | {{convertedValueString}}{{/if}} ({{recordCount}})">
    <div class="metric-row text-xs m-auto">
        <span class="ellipsis_inline">{{label}}</span><span class="bg-metric-badge-background rounded-lg px-1 py-0.5 ml-1 metric-badge">{{recordCount}}</span>
    </div>
    <div class="metric-row text-base font-semibold ellipsis_inline m-auto">{{formatCurrency value}}</div>
    {{#if alternateCurrency}}
        <div class="metric-row text-sm font-semibold alt-currency ellipsis_inline bg-label-background m-auto px-1">{{convertedValueString}}</div>
    {{/if}}
</div>

